mixin employmentInfo
	| employment info

mixin personalInfo
	| personal info

mixin familyInfo
	| family info


div(class="component-box")
	div(class="pmd-card")
		h1 You can edit this information about yourself
div(class="component-box") 
	div(class="pmd-card pmd-z-depth")  
		div(class="pmd-tabs") 
			div(class="pmd-tab-active-bar") 
			ul(class="nav nav-tabs" role="tablist") 
				li(role="presentation" class="active") 
					a(href="#employment-info" aria-controls="employment-info" role="tab" data-toggle="tab") Employment Info
				li(role="presentation") 
					a(href="#personal-info" aria-controls="personal-info" role="tab" data-toggle="tab") Personal Info
				li(role="presentation") 
					a(href="#family-info" aria-controls="family-info" role="tab" data-toggle="tab") Family Info
		
		div(class="pmd-card-body") 
			div(class="tab-content") 
				div(role="tabpanel" class="tab-pane active" id="employment-info")
					+employmentInfo
				div(role="tabpanel" class="tab-pane" id="personal-info")
					+personalInfo
				div(role="tabpanel" class="tab-pane" id="family-info")
					+familyInfo
			