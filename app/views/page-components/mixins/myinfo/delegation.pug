include ../summaries/summary-delegation.pug
include ../table/table-head.pug

mixin delegationInfo
	div(class="component-box")
		div(class="pmd-card")
			.row(style="padding: 10px;")
				.col-md-6
					h1(style="padding: 5px;") Delegation Information
				.col-md-2.hidden-xs
					a.btn.btn-primary.pmd-ripple-effect(href="/delegation/create", style="float: right;margin-top: 100px;") Request Delegation
				.col-md-3
					+summaryDelegation
	div(class="component-box")
		.pmd-card(style="margin-bottom: 0px;")
			.pmd-card-body(style="min-height: 0px;")
				.row
					.col-md-2
						+inputTextField({type: 'date', title: 'Start Date', id: 'delegation-filter-start-date'})
					.col-md-2
						+inputTextField({type: 'date', title: 'End Date', id: 'delegation-filter-end-date'})
					.col-md-2
						+inputDropdown({name: 'delegationFilterType', title: 'Type', id: 'delegation-filter-type'}, {'': 'All', 'cuti-tahunan': 'Cuti Tahunan', 'cuti-melahirkan': 'Cuti Melahirkan', 'cuti-sakit': 'Cuti Sakit'})
					.col-md-2
						+inputDropdown({name: 'delegationFilterStatus', title: 'Status', id: 'delegation-filter-status'}, {'': 'All', 'pending': 'Pending', 'approved': 'Approved', 'rejected': 'Rejected'})
					.col-md-1(style="padding-top: 10px;")
						+rippleButtonIcon({id: 'delegation-filter-search', icon: 'search', style: "float: right;min-width: 50px;"})

		div(class="pmd-card pmd-card-custom-view")
			div(class="pmd-table-card", style="max-height: 500px;overflow: auto;")
				table(class="table pmd-table")
					+generateTableHead(["#", "Type", "Start Date", "End Date", "Total Days", "Status", "Notes", "Actions"])
					tbody
						tr
							td(data-title="#") 1
							td(data-title="Type") Cuti Tahunan
							td(data-title="Start Date") 21 Juli 2019
							td(data-title="End Date") 22 Juli 2019
							td(data-title="Total Days") 2
							td(data-title="Status") Approved
							td(data-title="Notes") Mau Liburan Dulu
							td(data-title="Action")
								a(href="javascript:void(0);")
									i(class="material-icons md-dark pmd-sm") more_vert