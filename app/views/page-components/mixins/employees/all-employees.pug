include ../form-elements/forms.pug

mixin filterEmployee
	.row
		.col-md-3
			+inputTextField({title: "Employee Name", id: "employee-name"})
		.col-md-3
			+inputTextField({title: "Job Position", id: "job-position"})
		.col-md-3
			+inputDropdown({name: 'employeeStatus', title: 'Status', id: 'employee-status'}, [{name: 'active', title: 'Active'},{name: 'probation', title: 'Probation'},{name: 'graduate', title: 'Graduate'}])
		.col-md-2
			+rippleButtonIcon({class: 'btn-primary', style: "float: right;min-width: 50px;margin-top:8px;", icon: 'search', id: 'employee-search'})

mixin allEmployees(opts)
	div(class="component-box")
		div(class="pmd-card pmd-card-custom-view")
			div(class="pmd-table-card")
				.row
					.col-md-7
						+filterEmployee
				hr
				table(class="table pmd-table")
					+generateTableHead(["#", "Photo", "Full Name", "Employee ID", "Barcode", "Organization", "Job Position", "Job Title", "Hire Date", "Status", "Actions"])
					tbody
						tr
							td(data-title="#") 1
							td(data-title="Photo")
								img.img-responsive(style="float: right;", data-src="holder.js/40x40", src="/uploads/profiles/preview-no-image.png")
								hr(style="border: 0px solid;")
							td(data-title="Full Name") Akhmad Abdul Rohman
							td(data-title="Employee ID") 10001
							td(data-title="Barcode") 1
							td(data-title="Organization") Ivosights
							td(data-title="Job Position") Head
							td(data-title="Job Title") Tech Developer
							td(data-title="Hire Date") 20 Jun 2020
							td(data-title="Status") 20K
							td(data-title="Actions")
								a(href="javascript:void(0);")
									i(class="material-icons md-dark pmd-sm") more_vert