mixin summaryEmployees
    h3(class="text-muted") Total Of Employees
    div(class="pmd-card pmd-card-media-inline pmd-card-default")
        div(class="pmd-card-media", style="margin-top: 0px; padding-left: 0px;border-left: 4px solid #beecbe")
            div(class="media-body", style="min-width: 90px;padding: 2px;")
                h2(class="pmd-card-title-text text-right", style="font-size: 3.3rem;") 12
                span(class="pmd-card-subtitle-text", style="float:right;") employees
            div(class="media-right media-left")
                i(class="material-icons media-right", style="font-size: 60pt;padding-left: 0px;") group